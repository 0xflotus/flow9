import string;

export {
	isWriteContent : (text : string) -> bool;

	simpleText2WriteSource : (text : string) -> string;
}

isWriteContent(text : string) -> bool {
	startsWith(text, "<doc") || startsWith(text, "<s>") || startsWith(text, "<s v")
}

simpleText2WriteSource(text : string) -> string {
	"<doc v=1><s><p><t>" + text + "</t></p></s></doc>"
}
