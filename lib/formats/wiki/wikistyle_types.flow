import formats/wiki/wikilexer;
import wigi/wigi_engine_types;

export {
	//#40788. Styles that are not needed during parsing
	WikiStyle ::= WikiParsingStyle, WikiFonts, WikiAlign, ResourceGenerator,
		ExternallyGeneratedForms, DragDropBuffer, WigiEngine, WigiAdjustPreviewHeight, WikiBlanksCollector, WikiSetBlanks;
		
		WikiAlign(align : ParagraphAlignment);
		// control preview height depends on width
		WigiAdjustPreviewHeight: (adjustFn : (double) -> double);

		ResourceGenerator : (makeForm : (string, Maybe<string>) -> [Form]);

		WikiFonts : (
					baseFontSize : double,
					interlineSpace : double,
					normalText : [CharacterStyle],
					headingText : [CharacterStyle],
					heading2Text : [CharacterStyle],
					numberingText : [CharacterStyle],
					rightNumberingText : [CharacterStyle],
					bullet : Form
		);

		WikiBlanksCollector(registerBlank : (DynamicBehaviour<string>, string) -> void, unregisterBlank : (DynamicBehaviour<string>) -> void); //Takes a behaviour with user's input, and  first correct answers (to identify blank in report)

		DragStyle(ID : int, dcolor: DynamicBehaviour<Pair<int, int>>, dsize : DynamicBehaviour<WidthHeight>, connectedF : DynamicBehaviour<Form>, form : DynamicBehaviour<Form>);
		DropStyle(ID : int, connectedF : DynamicBehaviour<Form>, dcolor: DynamicBehaviour<Pair<int, int>>, dsize : DynamicBehaviour<WidthHeight>, val : (v:double)->void, form : DynamicBehaviour<Form>);
		DragDropBuffer : (drgForm:DynamicBehaviour<[DragStyle]>, drpForm:DynamicBehaviour<[DropStyle]>);

		ExternallyGeneratedForms : (getForms : () -> Tree<string, ([WikiStyle]) -> Form>);

		WikiSetBlanks(values : [Pair<string, string>]); // for setting blanks values in Smart Probes Custom Quiz Common. Pair<user answer, right answer>

