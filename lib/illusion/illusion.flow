export {
	// This is a dialog, but also a program!
	IuDialog : (title : string, elements : [IuElement], exp : IuExp);

	// User interface elements
	IuElement ::= IuInput, IuCheckBox, IuList, IuLinebreak;
		IuInput : (title : string, kind : IuInputKind, visibility : [IuExp]);
			IuInputKind ::= IuNumber, IuColor, IuText, IuCombox;
				IuNumber : (v : double, range : [IuNumberRange]);
					IuNumberRange : (low : double, high : double);
				IuColor : (v : int);
				// The name as well as the caption, including whitespace
				IuText : (v : string, caption : string);
				IuCombox : (c : [string]);

		IuCheckBox : (title : string, checked : string, visiblity : [IuExp]);

		IuList : (dialog : IuDialog);

		IuLinebreak : ();

	// A simple expression language
	IuExp ::= IuStruct, IuIf, IuArray, IuVar, IuCons, IuOr;
		IuStruct : (id : string, args : [IuExp]);

		IuIf : (condition : IuExp, thenExp : IuExp, elseExp : IuExp);

		IuArray : (elements : [IuExp]);

		IuVar : (name : string);
		IuCons : (e1 : IuExp, e2 : IuExp);
		IuOr : (e1 : IuExp, e2 : IuExp);
}
