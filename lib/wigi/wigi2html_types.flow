import wigi/wigi_engine_types;
import wigi/events;

export {
	Wigi2HtmlStyle ::= WigiHtmlFontMapping, WigiExternalBlockConverter, WigiExternalRecursiveConverter, WigiHTMLViewerUrl,
			WigiTextConverter, WigiHtmlResponsiveFontSize, WigiTextStyle, WigiMode, WigiConvertToRelativeSize, RemoveAllListSpacing,
			WigiHtmlPreview, WigiHtmlXHTML, WigiHtmlProcessMedia, WigiEngine, WigiHtmlWigify;
		WigiHtmlFontMapping(map : Tree<string, string>);
		WigiExternalBlockConverter(fn : (WigiExternalBlock, WigiEngine, [WigiBlockStyle], [Wigi2HtmlStyle]) -> string);
		WigiExternalRecursiveConverter(fn : (WigiExternalRecursive, [WigiElement], WigiEngine, [WigiRecursiveStyle], [Wigi2HtmlStyle]) -> string);
		WigiHTMLViewerUrl(url : string);
		// Allows to apply your own converter from WigiText to string
		WigiTextConverter(fn : (WigiText) -> string);
		// Allows to idicate whether it's exporting just for preview
		WigiHtmlPreview();
		// Generate xhtml
		WigiHtmlXHTML();
		// Allows to process media files and change url
		WigiHtmlProcessMedia(fn : (url : string) -> string);
		// Allows to send customized style to MWigify function
		WigiHtmlWigify(style : [flow]);
}

