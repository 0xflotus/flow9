import wigi/types;
import wigi/toolbar_types;

export {
	PureWigiEditor : (
		toolbar : Form,
		getEditorForm : (width : double, height : double) -> Form,
		doc : DynamicBehaviour<WigiElement>
	);
	SetPureWigiEditor : (editor : (WigiElement, [WigiToolbarStyle], [WigiStyles], bool) -> PureWigiEditor) -> void;
	makePureWigiEditor : (doc : WigiElement, wigiToolbarStyle: [WigiToolbarStyle], wigiDocumentStyle : [WigiStyles], hideToolbar: bool) -> PureWigiEditor;
}

pureWigiEditorLocal = ref \doc : WigiElement, wigiToolbarStyle : [WigiToolbarStyle], wigiDocumentStyle : [WigiStyles], hideToolbar : bool -> {println("WigiEditor as Form API isn't initialized."); PureWigiEditor(Empty(), \w, h -> Empty(), make(WigiEmpty()))};

SetPureWigiEditor(editor : (WigiElement, [WigiToolbarStyle], [WigiStyles], bool) -> PureWigiEditor) -> void {
	pureWigiEditorLocal := editor
}

makePureWigiEditor(doc : WigiElement, wigiToolbarStyle: [WigiToolbarStyle], wigiDocumentStyle : [WigiStyles], hideToolbar: bool) -> PureWigiEditor {
	^pureWigiEditorLocal(doc, wigiToolbarStyle, wigiDocumentStyle, hideToolbar)
}
