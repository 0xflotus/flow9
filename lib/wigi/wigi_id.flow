import wigi/types;

export {
	// A namespaced name, in reverse order
	WigiScope(names : [string]);

	globalWigiNamespace = WigiScope([]);

	// If the style contains a WigiName, then refine the namespace
	refineWigiNamespace(n : WigiScope, style : [?]) -> WigiScope;
}

refineWigiNamespace(n : WigiScope, style : [?]) -> WigiScope {
	wigiName : WigiName = extractStruct(style, WigiName(""));
	if (wigiName.name == "") n
	else WigiScope(concat([wigiName.name], n.names));
}
