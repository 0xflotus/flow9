import ui/buttons;

export {

	WigiButtonApi : (
		wigiButtonFn : (width:double, height: double, caption : string, enabled : Behaviour<bool>, shortcut : string,  onClick : () -> void) -> Form
	);

	setWigiButtonApi(api :WigiButtonApi) -> void;

	callWigiButton(caption : string, enabled : Behaviour<bool>, shortcut : string,  onClick : () -> void) -> Form;
	callWigiButtonWithWidth(width:double, caption : string, enabled : Behaviour<bool>, shortcut : string,  onClick : () -> void) -> Form;
	callWigiButtonWithWidthHeight(width:double, height: double, caption : string, enabled : Behaviour<bool>, shortcut : string,  onClick : () -> void) -> Form;
	
}

defaultWigiButtonApi = WigiButtonApi(orangeSkinButtonWithWidthHeight);

currentWigiButtonApi : ref WigiButtonApi = ref defaultWigiButtonApi;

setWigiButtonApi(api :WigiButtonApi) -> void {
	currentWigiButtonApi := api;
}

callWigiButton(caption : string, enabled : Behaviour<bool>, shortcut : string,  onClick : () -> void) -> Form {
	^currentWigiButtonApi.wigiButtonFn(110.0, 18.0, caption, enabled, shortcut, onClick)
}

callWigiButtonWithWidth(width:double, caption : string, enabled : Behaviour<bool>, shortcut : string,  onClick : () -> void) -> Form {
	^currentWigiButtonApi.wigiButtonFn(width, 18.0, caption, enabled, shortcut, onClick)
}

callWigiButtonWithWidthHeight(width:double, height: double, caption : string, enabled : Behaviour<bool>, shortcut : string,  onClick : () -> void) -> Form {
	^currentWigiButtonApi.wigiButtonFn(width, height, caption, enabled, shortcut, onClick)
}