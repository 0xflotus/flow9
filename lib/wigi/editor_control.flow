import wigi/editor_types;

export {
	// Is this global coordinate in the view, considering scrollbar?
	isWigiPointVisible(state : WigiEditorState, p : Point) -> bool;
}

isWigiPointVisible(state : WigiEditorState, p : Point) -> bool {
	x1 = getValue(state.viewX);
	y1 = getValue(state.viewY);
	wh = getValue(state.viewSize);
	x2 = x1 + wh.width;
	y2 = y1 + wh.height;

	x1 <= p.x && p.x < x2
	&& y1 <= p.y && p.y < y2
}
