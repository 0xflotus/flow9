import wigi/types;

export {
	CLEARED_STYLE_KEY = "cleared";
	filterWigiParagraphExternalStyle(styles : [WigiParagraphStyle]) -> [WigiParagraphStyle];
}

filterWigiParagraphExternalStyle(styles : [WigiParagraphStyle]) -> [WigiParagraphStyle] {
	filter(styles, \extStyle ->
		switch (extStyle) {
			WigiParagraphExternalStyle(data): !getJsonBoolField(parseJson(data), CLEARED_STYLE_KEY, true);
			default: true;
		}
	);
}