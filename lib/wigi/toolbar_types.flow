import form;
import tropic/tropic;
import wigi/external_block;
import wigi/external_recursive;

export {
	WigiToolbarStyle ::= DisableProof, ExtraElement, ShowTemplateButton, HideUndoRedo, 
			MiniParagraphAlignment, ReferenceDocument, SlideStyle, MultiProbeStyle, KaleidoscopeStyle,
			HideParagraphAlignment, HideParagraphControl, HideTools, TransparentElementToolbar,
			FullInteractiveList, SlideStripToolbarStyle, HideFontSizeControl, CoachMenuStyle, MathProbeMenuStyle, 
			MinimizeToolbarWidth, PreviewButton, LiteEditSkinStyle, SideBySideToolbarsLocation,
			ContextMenu, DisableAddReferenceButton, AdditionalFontColors, WigiTableGetLiveDoc, HideToolbar,
			WigiToolbarCustomFonts, WigiToolbarInsertMenuFilter, HideParagraphStyle, HideFontOptionsControl, HidePageBreak, HideClearColorButtons, HideTable;

		ExtraElement: (f : Form, style: [ExtraElementStyle]);	// Add this form right next to toolbar, can be further customized later
			ExtraElementStyle ::= LRPickerApi, DontCollapse, NamedLink;
				LRPickerApi(fn : (string, (string) -> void)-> void);
				DontCollapse();
				NamedLink(fn1 : (fn2 : (url : string, name : string) -> void, close : DynamicBehaviour<bool>) -> Tropic);
		TransparentElementToolbar : (isTransparent : DynamicBehaviour<bool>);
		HideUndoRedo: ();
		MiniParagraphAlignment: ();	// makes paragraph aligment button smaller
		HideParagraphAlignment();
		HideParagraphControl();
		HideFontSizeControl();
		HideTools();
		FullInteractiveList();		// makes full interactive list and add Interactive Table to section Tools
		ShowTemplateButton: ();		// remove Template button from the Tools menu and add one to the Main menu
		DisableProof: (); 			// Do not show "Proof" button
		ReferenceDocument();		// influence on behaviour and appearance
		SlideStyle();
		MultiProbeStyle();
		KaleidoscopeStyle();
		SlideStripToolbarStyle();	// influence on behaviour and appearance
		CoachMenuStyle();
		MathProbeMenuStyle();
		MinimizeToolbarWidth(); // #40707. URL in toolbar makes the editor's width too big
		PreviewButton(); // adds a button to show document preview in a popup
		SideBySideToolbarsLocation(v : bool); // places main and element toolbars side-by-side, true by default for MWEditor
		LiteEditSkinStyle(fill : int, stroke : int, strokeWidth : double); //used in new slide editor (remove fray background for elements)
		// additional colors. The selected colors will be collected in a "colors".
		AdditionalFontColors(colors : DynamicBehaviour<[int]>);
		// deactivates Add new reference button, e.g. for WigiTextInput block in edit mode
		DisableAddReferenceButton();
		// special case for wigi tables live doc due to we get them not via external recursive api
		WigiTableGetLiveDoc(fn : () -> void);
		HideToolbar();
		WigiToolbarCustomFonts(fonts : [ToolbarCustomFont]);
			ToolbarCustomFont(familyName : string, caption : string);
		WigiToolbarInsertMenuFilter(filter : (ExternalAPI) -> bool);
		HideParagraphStyle();
		HideFontOptionsControl();
		HidePageBreak();
		HideClearColorButtons(); //Hide remove color/all colors buttons in color picker
		HideTable();

		ExternalAPI ::= ExternalBlockAPI, ExternalBlockGroupAPI, ExternalRecursiveAPI;
}
