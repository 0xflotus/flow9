Pair(first : ?, second : ??);
Triple(first : ?, second : ??, third : ???);
Quadruple(first : ?, second : ??, third : ???, fourth : ????);

japaneseFontParams : Triple<string, string, double> = Triple("Tahoma", "Tahoma", 1.0);

cjkFontMappingFn(lang : string, size : double) {
	fontParams = {
		if (lang == "ja") 
			japaneseFontParams
		else 
			japaneseFontParams
	};
	Pair(fontParams.first, size * fontParams.third)
}
